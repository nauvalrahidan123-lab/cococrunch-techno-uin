import path from 'path';
import { defineConfig, loadEnv } from 'vite';

export default defineConfig(({ mode }) => {
    // Memuat variabel lingkungan dari Vercel
    const env = loadEnv(mode, '.', ''); 
    
    // Periksa apakah API Key ada, jika tidak, gunakan string kosong
    const geminiApiKey = env.VITE_GEMINI_API_KEY || process.env.VITE_GEMINI_API_KEY || '';

    return {
        // [1] SOLUSI MASALAH JALUR CSS/JS 404
        base: './', 
        
        server: {
            port: 3000,
            host: '0.0.0.0',
        },
        plugins: [],
        define: {
            // [2] GUNAKAN NAMA STANDAR VITE (VITE_ prefix)
            //     DAN pastikan nilai yang di-define ada
            'process.env.API_KEY': JSON.stringify(geminiApiKey),
            'process.env.GEMINI_API_KEY': JSON.stringify(geminiApiKey)
        },
        resolve: {
            alias: {
                // Pastikan jalur alias di-resolve dengan benar
                '@': path.resolve(__dirname, '.'),
            }
        }
    };
});
